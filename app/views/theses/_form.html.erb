<%= simple_form_for(@thesis) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :abstract %>
    <%= f.input :year %>
    <%= f.input :bibliography %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
