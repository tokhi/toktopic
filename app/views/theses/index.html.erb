<h1>Listing theses</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Abstract</th>
    <th>Year</th>
    <th>Bibliography</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @theses.each do |thesis| %>
  <tr>
    <td><%= thesis.title %></td>
    <td><%= thesis.description %></td>
    <td><%= thesis.abstract %></td>
    <td><%= thesis.year %></td>
    <td><%= thesis.bibliography %></td>
    <td><%= link_to 'Show', thesis %></td>
    <td><%= link_to 'Edit', edit_thesis_path(thesis) %></td>
    <td><%= link_to 'Destroy', thesis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

