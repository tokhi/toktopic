<h4> Open Source topics!</h4>
<br/>
<%= link_to 'Register you topic', new_event_path %>
<br/>
<br/>
<div class="span6">
<table class="table table-striped table-bordered table-condensed">
<thead>
<tr class="success">
    <th>Name & ID</th>
    <th>Topic</th>
  </tr>
</thead>
<tbody>
<% @events.each do |event| %>
  <tr >
    <td><%= event.name %></td>
    <td><%= event.topic %></td>
    <% if user_signed_in? %> 
    <% if current_user.has_role? :admin %>
       <td><%= link_to 'Edit', edit_event_path(event) %></td>
       <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    <% end %>

  </tr>
<% end %>
</tbody>
</table>
</div>
<br />

